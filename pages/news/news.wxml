<view class="container">
    <view class="imageBig">
        <image src="/static/images/newsBanner.jpg"></image>
    </view>
    <!--  新闻通知  -->
    <view class="newsContainer">
        <text class="title">新闻通知</text>
        <view class="news" wx:for="{{newsList}}">
            <text class="newsTitle">{{item.title}}</text>
            <text class="newsTime">{{item.date}}</text>
        </view>
        <view class="page">
            <button class="mini-btn" type="default" size="mini">上一页</button>
            <view class="showPage">1/7</view>
            <button class="mini-btn" type="default" size="mini">下一页</button>
        </view>
    </view>
</view>
